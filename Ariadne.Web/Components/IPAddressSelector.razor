@using Ariadne.Core
<MatChip Label="bla" LeadingIcon="router" @onclick="@(async () => await OnClick())">
</MatChip>

@code {
    //private string IPAddress => DiscoveredIPAddress.Address.ToString();

    [Parameter]
    public DiscoveredIPAddress DiscoveredIPAddress { get; set; }

    [Parameter]
    public EventCallback<DiscoveredIPAddress> OnSelectIPAddress { get; set; }

    private async Task OnClick()
    {
        await OnSelectIPAddress.InvokeAsync(DiscoveredIPAddress);
    }

}
